                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/unit_desc_margin_right"
                    android:text="@string/length_um"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/unit_desc_text_size"/>

                <TextView
