<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout0_padding"
    android:paddingRight="@dimen/layout0_padding"
    android:background="@drawable/backrepeat"
    tools:context=".activity.unit.UnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/layout_entry_padding_top"
        android:paddingLeft="@dimen/layout_entry_padding_left"
        android:layout_marginBottom="@dimen/layout_entry_margin_bottom">

        <EditText
            android:id="@+id/unit_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/unit_length_hint"
            android:paddingRight="@dimen/entry_padding_right"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Spinner
            android:id="@+id/distance_scale_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/unit_length_values"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/buttons_margin_bottom">

        <Button
            android:id="@+id/btn_convert"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent_very_small"
            android:text="@string/convert"
            android:textColor="@color/colorPrimaryText"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/button_rounded"/>

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent_very_small"
            android:text="@string/clear"
            android:textColor="@color/colorPrimaryText"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/button_rounded"/>

    </LinearLayout>

