                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unit_value_margin_top"
                    android:gravity="right"
                    android:layout_gravity="bottom"
                    android:hint="@string/value"
                    android:textSize="@dimen/unit_value_text_size"
                    android:textColor="@color/tab1_result"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/desc_length_um_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/unit_symbol_margin_left"
